@model Filmss
<div class="row">
    <div class="col-md-2">
        <img src= "@Model.Image" class="img-fluid rounded" alt="">
    </div>
    <div class="col-md-5">
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
            <h5 class="card-title">@Model.Title</h5>
        </a>
        <p class="card-text">@Model.Details</p>
        
<div>
    @if(Model.Tags !=null)
    {
        @foreach (var tag in @Model.Tags)
        {
            <span class="badge bg-primary">@tag</span>
        }
    }
</div>


    </div>
</div>